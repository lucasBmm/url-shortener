{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "url-shortener-gateway",
  "port": 8080,
  "timeout": "3s",
  "cache_ttl": "300s",
  "extra_config": {
    "github_com/devopsfaith/krakend-cors": {
      "allow_origins": [],
      "allow_methods": [
        "POST",
        "GET",
        "DELETE",
        "PUT",
        "OPTIONS"
      ],
      "allow_headers": [
        "Origin",
        "Authorization",
        "Content-Type",
        "Access-Control-Allow-Origin",
        "locale",
        "accept",
        "x-requested-with",
        "Cache-Control"
      ],
      "expose_headers": [
        "Content-Length",
        "Content-Type",
        "Cache-Control",
        "Authorization"
      ],
      "max_age": "12h",
      "allow_credentials": true
    },
    "router": {
      "return_error_msg": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/api/auth",
      "method": "POST",
      "backend": [
        {
          "host": [
            "http://user-management-service:3002"
          ],
          "url_pattern": "/auth",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            }
          }
        }
      ]
    },
    {
      "endpoint": "/api/auth/login",
      "method": "POST",
      "backend": [
        {
          "host": [
            "http://user-management-service:3002"
          ],
          "url_pattern": "/auth/login",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            }
          }
        }
      ]
    },
    {
      "endpoint": "/api/url",
      "method": "GET",
      "input_headers": [
        "Authorization"
      ],
      "encoding": "no-op",
      "backend": [
        {
          "host": [
            "http://url-service:3001"
          ],
          "url_pattern": "/url",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            }
          }
        }
      ]
    },
    {
      "endpoint": "/api/url",
      "method": "POST",
      "input_headers": [
        "Authorization",
        "Content-Type"
      ],
      "backend": [
        {
          "host": [
            "http://url-service:3001"
          ],
          "url_pattern": "/url",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            }
          }
        }
      ]
    },
    {
      "endpoint": "/api/url/{id}",
      "method": "PATCH",
      "backend": [
        {
          "host": [
            "http://url-service:3001"
          ],
          "url_pattern": "/url/{id}",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            }
          }
        }
      ]
    },
    {
      "endpoint": "/api/url/{id}",
      "method": "DELETE",
      "backend": [
        {
          "host": [
            "http://url-service:3001"
          ],
          "url_pattern": "/url/{id}",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            }
          }
        }
      ]
    },
    {
      "endpoint": "/api/redirect/{url}",
      "method": "GET",
      "output_encoding": "no-op",
       "extra_config": {
        "github.com/devopsfaith/krakend-cors": {
          "allow_origins": ["*"],
          "expose_headers": ["Location"]
        }
      },
      "backend": [
        {
          "host": [
            "http://redirect-service:3000"
          ],
          "url_pattern": "/redirect/{url}",
          "encoding": "no-op",
           "extra_config": {
            "backend/http": {
              "return_error_code": true
            },
            "backend/http/client": {
              "no_redirect": true
            }
          }
        }
      ]
    }
  ]
}