{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "url-shortener-gateway",
  "port": 8080,
  "timeout": "3s",
  "cache_ttl": "300s",
  "extra_config": {},
  "endpoints": [
    {
      "endpoint": "/api/auth",
      "method": "GET",
      "backend": [
        {
          "host": ["http://localhost:3000"]
        }
      ]
    },
    {
      "endpoint": "/api/url",
      "method": "GET",
      "backend": [
        {
          "host": ["http://localhost:3001"]
        }
      ]
    },
    {
      "endpoint": "/api/redirect",
      "method": "GET",
      "backend": [
        {
          "host": ["http://localhost:3002"]
        }
      ]
    }
  ]
}
